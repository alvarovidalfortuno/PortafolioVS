<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de tareas</h5>
                    <div class="ibox-tools">
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped" id="table">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Estado Hito</th>
                                <th>Fecha Inicio Hito</th>
                                <th>Fecha Termino Hito</th>
                                <th>Desc Hito</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in ViewBag.tarea)
                            {

                            <tr>

                                <td>@item.responsable</td>
                                <td>@item.estado</td>
                                <td>@item.fecha_inicio</td>
                                <td>@item.fecha_termino</td>
                                <td>@item.descripcion</td>
                                <td>
                                    @Html.ActionLink("Finalizar Hito", "FinalizarTarea", new { tarea = item.hitoId }, new { @class = "btn btn-primary btn-xs" })
                                </td>
                            </tr>
                            }
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
