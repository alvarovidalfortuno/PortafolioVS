@model IEnumerable<WebApplication1.Models.ROLES>

@{
    ViewBag.Title = "Roles";
}

<h2>Index</h2>

<p>
    <button onclick="location.href='@Url.Action("Create", "Roles")';return false;" class="btn btn-primary">Crear Rol</button>
</p>
<table name="tabla" class="table table-striped table-bordered table-hover dataTables-example">
    <tr>
        <th>
            ROLES
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NOMBRE_ROL)
            </td>
            <td>
                @*@Html.ActionLink("Editar", "Edit", new { id = item.ID }) |*@
                @Html.ActionLink("Borrar", "Delete", new { id = item.ID_ROL })
            </td>
        </tr>
    }

</table>
